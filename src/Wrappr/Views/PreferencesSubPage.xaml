<Page
    x:Class="Wrappr.Views.PreferencesSubPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:localization="using:Wrappr.Resources"
    xmlns:services="using:Wrappr.Model"
    mc:Ignorable="d">
    <Grid>
        <StackPanel
            HorizontalAlignment="Stretch"
            Orientation="Vertical"
            Spacing="8">
            <controls:SettingsCard
                IsEnabled="{x:Bind services:Elevation.IsElevated}"
                Header="{x:Bind localization:Strings.AddTaskToSchedulerTitle}">
                <controls:SettingsCard.Resources>
                    <!-- ReSharper disable Xaml.RedundantResource -->
                    <x:Double x:Key="SettingsCardWrapThreshold">500</x:Double>
                    <!-- ReSharper restore Xaml.RedundantResource -->
                </controls:SettingsCard.Resources>
                <ToggleSwitch
                    IsOn="{Binding Path=IsEnabled, Mode=TwoWay}">
                    <ToggleSwitch.DataContext>
                        <services:Autostart/>
                    </ToggleSwitch.DataContext>
                </ToggleSwitch>
            </controls:SettingsCard>
            <controls:SettingsCard
                Header="{x:Bind localization:Strings.TrayMenuWrappersInTopSetting}">
                <ToggleSwitch
                    IsOn="{x:Bind services:DataStore.Settings.TrayMenuWrappersInTop, Mode=TwoWay}"/>
            </controls:SettingsCard>
        </StackPanel>
    </Grid>
</Page>