<Page
    x:Class="Wrappr.Components.Pages.NavigationRoot"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converters="using:CommunityToolkit.WinUI.Converters"
    mc:Ignorable="d"
    xmlns:resources="using:Wrappr.Resources"
    xmlns:services="using:Wrappr.Services">
    <Page.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid
            Canvas.ZIndex="10"
            Height="48"
            VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="16" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel
                Spacing="12"
                Grid.Column="1"
                Orientation="Horizontal">
                <Image
                    Source="/Assets/Images/logo64.png"
                    Width="16"
                    Height="16" />
                <TextBlock
                    VerticalAlignment="Center"
                    Canvas.ZIndex="10"
                    Text="{x:Bind resources:Strings.AppName}" />
                <TextBlock
                    VerticalAlignment="Center"
                    FontWeight="Light"
                    Text="{x:Bind resources:Strings.ElevatedTitlebarText}"
                    Visibility="{x:Bind services:Elevation.IsElevated, Converter={StaticResource BoolToVisibilityConverter}}"
                    Foreground="{StaticResource AppBarItemDisabledForegroundThemeBrush}" />
            </StackPanel>
        </Grid>

        <NavigationView
            x:Name="NavigationView"
            IsPaneOpen="False"
            PaneDisplayMode="Top"
            IsSettingsVisible="False"
            IsBackEnabled="False"
            IsPaneVisible="False"
            Grid.Row="1">
            <Frame
                x:Name="NavigationFrame"
                IsNavigationStackEnabled="True" />
        </NavigationView>

        <InfoBar
            Grid.Row="1"
            VerticalAlignment="Bottom"
            Margin="20, 0, 20, 40"
            x:Name="InfoBar" />
    </Grid>
</Page>