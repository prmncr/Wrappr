<Page
    x:Class="Wrappr.Components.Pages.NavigationRoot"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converters="using:CommunityToolkit.WinUI.Converters"
    mc:Ignorable="d"
    Loaded="OnLoaded"
    xmlns:resources="using:Wrappr.Resources"
    xmlns:pages="using:Wrappr.Components.Pages"
    xmlns:services="using:Wrappr.Services">
    <Page.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid
            Canvas.ZIndex="10"
            Height="48"
            x:Name="AppTitleBar"
            VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="16" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition x:Name="RightPaddingColumn" Width="0" />
            </Grid.ColumnDefinitions>
            <StackPanel
                Spacing="12"
                Grid.Column="1"
                Orientation="Horizontal">
                <Image
                    Source="/Assets/Images/logo64.png"
                    Width="16"
                    Height="16" />
                <TextBlock
                    VerticalAlignment="Center"
                    Canvas.ZIndex="10"
                    Text="{x:Bind resources:Strings.AppName}" />
                <TextBlock
                    VerticalAlignment="Center"
                    FontWeight="Light"
                    Text="{x:Bind resources:Strings.ElevatedTitlebarText}"
                    Visibility="{x:Bind services:Elevation.IsElevated, Converter={StaticResource BoolToVisibilityConverter}}"
                    Foreground="{StaticResource AppBarItemDisabledForegroundThemeBrush}" />
            </StackPanel>
        </Grid>

        <NavigationView
            x:Name="RootNavigation"
            IsPaneOpen="False"
            PaneDisplayMode="Top"
            IsBackEnabled="{x:Bind Path=services:Navigation.Instance.CanGoBack, Mode=TwoWay}"
            SelectionChanged="OnRootNavigationSelectionChanged"
            Grid.Row="1">
            <NavigationView.MenuItems>
                <NavigationViewItem
                    Content="{x:Bind resources:Strings.WrappersPageTitle}"
                    Tag="{x:Bind pages:WrappersListViewerPage.TypeNavigationTag}"
                    IsSelected="True">
                </NavigationViewItem>
                <NavigationViewItem
                    Content="{x:Bind resources:Strings.WrapperGroupsPageTitle}"
                    Tag="{x:Bind pages:WrapperGroupsListViewerPage.TypeNavigationTag}"
                    IsSelected="True">
                </NavigationViewItem>
            </NavigationView.MenuItems>
            <Frame
                x:Name="MainViewport"
                IsNavigationStackEnabled="True" />
        </NavigationView>

        <InfoBar
            Grid.Row="1"
            VerticalAlignment="Bottom"
            Margin="20, 0, 20, 40"
            x:Name="InfoBar" />
    </Grid>
</Page>