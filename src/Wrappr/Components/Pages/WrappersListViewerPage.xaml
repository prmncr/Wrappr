<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:model="using:Wrappr.Model"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:fonts="using:Wrappr"
    xmlns:resources="using:Wrappr.Resources"
    xmlns:components="using:Wrappr.Components"
    xmlns:services="using:Wrappr.Services"
    xmlns:converters="using:CommunityToolkit.WinUI.Converters"
    xmlns:utilities="using:Wrappr.Utilities"
    Tag="{x:Bind resources:Strings.WrappersTitle}"
    x:Class="Wrappr.Components.Pages.WrappersListViewerPage">
    <Page.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <DataTemplate x:Name="WrapperTemplate" x:DataType="model:Wrapper">
            <ItemContainer HorizontalAlignment="Stretch">
                <controls:SettingsCard
                    Click="WrapperCardClicked"
                    IsClickEnabled="True">
                    <controls:SettingsCard.Header>
                        <TextBlock
                            FontSize="14"
                            FontWeight="SemiBold"
                            FontFamily="{StaticResource JetBrainsMono}"
                            Text="{Binding Path=ServiceName}"
                            MaxLines="1"
                            TextTrimming="CharacterEllipsis"/>
                    </controls:SettingsCard.Header>
                    <controls:SettingsCard.Description>
                        <TextBlock
                            Text="{Binding Path=DisplayName}"
                            MaxLines="1"
                            TextTrimming="CharacterEllipsis"/>
                    </controls:SettingsCard.Description>
                    <controls:SettingsCard.Resources>
                        <!-- ReSharper disable Xaml.RedundantResource -->
                        <x:Double x:Key="SettingsCardWrapThreshold">150</x:Double>
                        <!-- ReSharper restore Xaml.RedundantResource -->
                    </controls:SettingsCard.Resources>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <ProgressRing IsActive="{x:Bind IsWaitingForStatusChange}" />
                        <ToggleSwitch
                            IsEnabled="{x:Bind services:Elevation.IsElevated}"
                            MinWidth="0"
                            IsOn="{x:Bind Path=Enabled, Mode=OneWay}"
                            utilities:ToggleSwitchExtensions.ToggledCommand="{x:Bind ToggleServiceCommand}"/>
                    </StackPanel>
                </controls:SettingsCard>
            </ItemContainer>
        </DataTemplate>
    </Page.Resources>
    <components:Scaffold Title="{x:Bind resources:Strings.WrappersTitle}">
        <components:Scaffold.Header>
            <Grid
                Canvas.ZIndex="10"
                Margin="20,4"
                Height="64"
                VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel
                    Spacing="12"
                    Grid.Column="1"
                    Orientation="Horizontal"
                    VerticalAlignment="Center">
                    <Image
                        VerticalAlignment="Center"
                        Source="/Assets/Images/logo64.png"
                        Width="24"
                        Height="24" />
                    <TextBlock
                        VerticalAlignment="Center"
                        Canvas.ZIndex="10"
                        FontWeight="Bold"
                        FontSize="16"
                        Text="{x:Bind resources:Strings.AppName}" />
                </StackPanel>
                <StackPanel
                    Grid.Column="2"
                    Orientation="Horizontal"
                    Spacing="8">
                    <Button
                        VerticalAlignment="Center"
                        Visibility="{x:Bind services:Elevation.IsElevated, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=True}"
                        Background="Crimson"
                        BorderBrush="Transparent"
                        Click="NotElevatedButtonClick">
                        <StackPanel
                            Spacing="8"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <TextBlock
                                VerticalAlignment="Center"
                                FontWeight="Light"
                                Text="{x:Bind resources:Strings.NotElevatedTipTitlebarText}" />
                            <FontIcon
                                FontSize="14"
                                Glyph="{x:Bind fonts:Icons.Info}" />
                        </StackPanel>
                    </Button>
                    <Button
                        BorderBrush="Transparent"
                        Background="Transparent"
                        VerticalAlignment="Center"
                        Padding="6">
                        <FontIcon
                            FontSize="16"
                            Glyph="{x:Bind fonts:Icons.More}" />
                        <Button.Flyout>
                            <MenuFlyout x:Name="OptionsFlyout">
                                <MenuFlyoutItem
                                    Click="SettingsButtonClicked"
                                    Text="{x:Bind resources:Strings.SettingsTitle}">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon
                                            FontSize="14"
                                            Glyph="{x:Bind fonts:Icons.Settings}" />
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutSeparator />
                                <MenuFlyoutItem
                                    Click="Exit"
                                    Text="{x:Bind resources:Strings.CloseApp}">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon
                                            FontSize="14"
                                            Glyph="{x:Bind fonts:Icons.PowerButton}" />
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                            </MenuFlyout>
                        </Button.Flyout>
                    </Button>
                </StackPanel>

            </Grid>
        </components:Scaffold.Header>
        <components:Scaffold.Actions>
            <Border
                Margin="0,0,0,8"
                Background="#55000000"
                Padding="8"
                CornerRadius="8">
                <Grid>
                    <TextBlock VerticalAlignment="Center" Text="{x:Bind resources:Strings.WrappersTitle}"/>
                    <Button
                        HorizontalAlignment="Right"
                        Click="CreateWrapper">
                        <StackPanel
                            Orientation="Horizontal"
                            Spacing="8">
                            <FontIcon
                                FontSize="16"
                                Glyph="{x:Bind fonts:Icons.Add}" />
                            <TextBlock
                                Text="{x:Bind resources:Strings.CreateWrapperPageRedirectButtonText}" />
                        </StackPanel>
                    </Button>
                </Grid>
            </Border>
        </components:Scaffold.Actions>
        <Border
            Margin="0,0,0,8"
            Background="#55000000"
            Padding="8"
            CornerRadius="8">
            <ScrollView
                Padding="0"
                Margin="0">
                <ListView
                    ItemsSource="{x:Bind model:WrappersStorage.Items}"
                    ItemTemplate="{StaticResource WrapperTemplate}"
                    Padding="0"
                    Margin="0"
                    SelectionMode="None">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            <Setter Property="Margin" Value="0,0,0,4" />
                            <Setter Property="Padding" Value="0" />
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>
            </ScrollView>
        </Border>
    </components:Scaffold>
</Page>