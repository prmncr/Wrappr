<?xml version="1.0" encoding="utf-8"?>

<UserControl
    x:Class="Wrappr.Components.Scaffold"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:services="using:Wrappr.Services"
    mc:Ignorable="d">

    <Grid Margin="36, 0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Border Margin="4, 32, 4, 24">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <BreadcrumbBar Grid.Column="0" ItemsSource="{x:Bind services:Navigation.Trace}" ItemClicked="NavigateToClicked">
                    <BreadcrumbBar.ItemTemplate>
                        <DataTemplate x:DataType="x:String">
                            <TextBlock Text="{x:Bind}" />
                        </DataTemplate>
                    </BreadcrumbBar.ItemTemplate>
                </BreadcrumbBar>
                <ContentControl
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right"
                    Grid.Column="1"
                    Content="{x:Bind Actions}" />

            </Grid>
        </Border>
        <ContentPresenter
            Grid.Row="1"
            HorizontalAlignment="Stretch"
            Content="{x:Bind Body}" />
    </Grid>
</UserControl>